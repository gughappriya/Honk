<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"  android:background="@color/main" tools:context=".ContactActivity" >
    <Button android:id="@+id/btnDone" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
        android:text="Done"  android:textColor="@color/White"
        android:background="@color/darkMain" />
    <EditText android:id="@+id/txt_searchContact" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" android:ems="10" android:hint="@string/searchText"
        android:inputType="text" > </EditText>
    <ListView android:id="@+id/lst_contactList" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_above="@+id/btnDone"
        android:layout_alignParentLeft="true" android:layout_below="@+id/txt_searchContact" > </ListView>
</RelativeLayout>


