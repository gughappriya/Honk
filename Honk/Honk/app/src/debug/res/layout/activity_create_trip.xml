<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/lightMain"

    tools:context="com.example.teamhonk.honk.controllers.CreateTripActivity">

    <TextView
        android:id="@+id/createATrip"
        android:text="@string/createATrip"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="30sp"
        android:textColor="@color/darkMain"
        />

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>
    <!-- Making the editable text boxes for user to enter trip data -->

    <!--Enter trip location-->
    <!--Need to turn this into a GoogleMaps searchable box -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/layoutLocationPicker">
    <EditText
        android:id="@+id/editTripLocaton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/editTripLocation"
        android:focusable="false"/>
        <Button android:layout_height="wrap_content"
            android:layout_weight="0" android:id="@+id/btnSearchLocation" android:text="@string/choosePlace"
            android:layout_width="100dp"
            android:textColor="@color/White"
            android:background="@color/darkMain"></Button>
    </LinearLayout>
    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="2dp" />


    <!--Enter trip date (perhaps later we will make this automatically generated by the app)-->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/layoutDatePicker">
        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/editTripDate"
            android:inputType="date"
            android:hint="@string/editTripDate"
            android:focusable="false">
        </EditText>

        <Button android:layout_height="wrap_content"
            android:layout_weight="0" android:id="@+id/btnCalendar" android:text="@string/chooseDate"
            android:layout_width="100dp"
            android:textColor="@color/White"
            android:background="@color/darkMain"></Button>
    </LinearLayout>
    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="2dp" />
    <!--Enter trip time (perhaps later we will make this automatically generated by the app)-->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/layoutTimePicker">
        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/editTripTime"
            android:hint="@string/editTripTime"
            android:focusable="false"
           ></EditText>
        <Button android:layout_height="wrap_content"
            android:layout_weight="0" android:id="@+id/btnTimePicker"
            android:text="@string/chooseTime" android:layout_width="100dp"
            android:textColor="@color/White"
            android:background="@color/darkMain"></Button>
    </LinearLayout>
    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="2dp" />
    <!--Enter Friend coming on trip-->
    <!--need to turn this into a contact picker-->
    <!--Enter trip time (perhaps later we will make this automatically generated by the app)-->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/layoutFriendPicker">
        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/editTripFriend"
            android:layout_width="match_parent"
            android:focusable="false"
            android:hint="@string/editTripFriend"/>
        <Button android:layout_height="wrap_content"
            android:layout_weight="0" android:id="@+id/btnFriendPicker"
            android:text="@string/chooseFriend" android:layout_width="100dp"
            android:textColor="@color/White"
            android:background="@color/darkMain"></Button>
    </LinearLayout>
    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <!--Enter trip name-->
    <EditText
        android:id="@+id/editTripName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/editTripName"/>

    <!--When "Save" Button is pressed, trip will be saved in Parse-->
    <Button
        android:id="@+id/saveTrip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:background="@color/darkMain"
        android:textSize="25sp"
        android:text="@string/saveTrip"/>

</LinearLayout>
